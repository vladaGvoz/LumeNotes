<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/cardBackground"/>

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/cardBorder"/>

    <!-- Inner padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
